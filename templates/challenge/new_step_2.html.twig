{% extends 'base.html.twig' %}

{% block title %}{{ challenge.title }}{% endblock %}

{% block body %}
<div id="arrow-left" class="arrow" href="">{{ include('svg/arrowleft.html.twig') }}</div>

<section class="bloc-full">
    <aside id="column-left" class="bloc-column-abs">
        <div class="bloc-title"></div>
        <div class="bloc-column-link">
            <div class="btmain">
                <a href="{{ path('app_challenge_index')}}">Retour</a>
            </div>
            
        </div>
    </aside>
    <section class="bloc-large-abs">
        <div class="bloc-title"></div>
        <div class="form-base">
            {{ include('challenge/_form_step_2.html.twig') }}
            {{ include('challenge/_delete_form.html.twig') }}
        </div>
        <div class="form-base">
            {% if challenge.workout is null %}
            <h4>Pas de workout sélectionné</h4>
                {% else %}
                <h4>Workout du challenge</h4>
                    {{ include('challenge/_workout_view.html.twig') }}
            {% endif %}
        </div>
        <div class="bloc-info">
            <p>Ajoutez un des workout que vous avez crée à votre challenge</p>
        </div>
                        {{ include('challenge/_workout_list.html.twig') }}
    </section>
</section>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/challenge/send.js')}}"></script>
{% endblock %}