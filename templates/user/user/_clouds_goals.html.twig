                    <li>
                        <a href="{{path('app_user_show', {id: user.id})}}" class="btmain">Retour</a>
                    </li>
                    <li>
                        <div class="btvalid" id="BtnModal">Tu ne trouves pas ton but ? Ajoutes le !</div>
                    </li>
                </ul>
            </div>
        </aside>           
    <section class="bloc-large-abs">
        <h2 class="bloc-title">Les objectifs des utilisateurs</h2>
        {{ form_start(formUser) }}
        {{ form_widget(formUser) }}
