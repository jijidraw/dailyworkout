{% extends 'base.html.twig' %}

{% block title %}profil de : {{ user.name }}{% endblock %}

{% block body %}
<div class="modal-background hidden" id="modal">

    <div class="modal-content">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btblue">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}
</div>
    <section class="bloc-full ">
        <aside id="column-left" class="bloc-column-abs">
            <div class="bloc-link-column">
                <h1 class="bloc-title">Mes goals</h1>
                {% for goals in app.user.goal %}
                    {{ goals.name }}
                {% endfor %}
            </div>
        </aside>           
    <section class="bloc-large-abs">
        <h2 class="bloc-title">Les objectifs des utilisateurs</h2>
        {{ form_start(formUser) }}
        {{ form_widget(formUser) }}
        <div class="bloc-title">
            <div class="btmain" id="BtnModal">Vous ne trouvez pas votre objectifs ? Ajouter le !</div>
            <button class="btblue">{{ button_label|default('Enregistrer') }}</button>
        </div>
        {{ form_end(formUser) }}
    </section>
    </section>

    <div class="bloc-space"></div>
{% endblock %}
{% block javascripts %}
{% endblock %}