<div class="modal-background hidden" id="modal">

    <div class="modal-content">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btvalid">{{ button_label|default('Ajouter') }}</button>
        <div id="close" class="help-close">{{ include('svg/deletecross.html.twig') }}</div>

    </div>
{{ form_end(form) }}
</div>
    <section class="bloc-full ">
        <aside id="column-left" class="bloc-column-abs">
