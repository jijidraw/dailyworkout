{# category #}
{# <form action="" id="filters"> #}

<h3>Par categorie</h3>
<form action="" id="filters">
    {% for categorie in category %}
        <p>
            <input type="radio" name="category[]" id="cat{{ categorie.id}}" value="{{categorie.id}}">
            <label for="cat{{categorie.id}}">{{ categorie.name}}</label>
        </p>
    {% endfor %}

{# muscles #}
<h3>Par groupes musculaire</h3>

    {% for muscle in muscles %}
    <p>
        <input type="radio" name="muscles[]" id="muscles{{ muscle.id}}" value="{{muscle.id}}">
        <label for="muscles{{muscle.id}}">{{ muscle.name}}</label>
    </p>
    {% endfor %}

{# sports #}
<h3>Par sport</h3>
    {% for sport in sports %}
    <p>
        <input type="radio" name="sports[]" id="sports{{ sport.id}}" value="{{sport.id}}">
        <label for="sports{{sport.id}}">{{ sport.name}}</label>
    </p>
    {% endfor %}
</form>
